<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">
    <!--   <menu xmlns:android="http://schemas.android.com/apk/res/android">
           &lt;!&ndash; Settings, should always be in the overflow &ndash;&gt;
           <item android:id="@+id/action_settings"
               android:title="@string/action_settings"
               android:showAsAction="never" />
       </menu>-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/value"
        android:layout_alignParentTop="true"
        android:height="50dp"
        android:visibility="visible"
        android:textSize="30sp"
        android:gravity="right" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete"
        android:id="@+id/buttonDelete"
        android:layout_below="@+id/value"
        android:layout_alignParentRight="true"
        android:onClick="onClick"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp" />

    <GridLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:id="@+id/gridLayout"
        android:rowCount="4"
        android:columnCount="4"
        android:layout_below="@+id/buttonDelete">

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="70dp"
            android:layout_height="fill_parent"
            android:text="sin"
            android:id="@+id/buttonSin"
            android:layout_row="0"
            android:layout_column="0"
            android:height="70dp"
            android:layout_gravity="left"
            android:onClick="onClick"
            />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="cos"
            android:id="@+id/buttonCos"
            android:layout_row="0"
            android:height="70dp"
            android:layout_gravity="right"
            android:layout_column="1"
            android:onClick="onClick"
            />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="tan"
            android:id="@+id/buttonTan"
            android:layout_row="0"
            android:height="70dp"
            android:onClick="onClick"
            android:layout_gravity="right"
            android:layout_column="2"
            />
        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="i"
            android:id="@+id/buttonI"
            android:layout_row="0"
            android:height="70dp"
            android:layout_column="3"
            android:onClick="onClick"
            android:layout_gravity="left|right" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="ln"
            android:id="@+id/buttonLn"
            android:onClick="onClick"
            android:layout_row="1"
            android:layout_column="0"
            android:height="70dp"
            android:layout_gravity="left"
            />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="log"
            android:id="@+id/buttonLog"
            android:layout_row="1"
            android:height="70dp"
            android:onClick="onClick"
            android:layout_gravity="right"
            android:layout_column="1"
            />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="π"
            android:id="@+id/buttonPie"
            android:layout_row="1"
            android:height="70dp"
            android:onClick="onClick"
            android:layout_gravity="right"
            android:layout_column="2"
            />
        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="e"
            android:id="@+id/buttonE"
            android:layout_row="1"
            android:height="70dp"
            android:onClick="onClick"
            android:layout_column="3"
            android:layout_gravity="left|right" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="%"
            android:id="@+id/buttonPercentage"
            android:layout_row="2"
            android:onClick="onClick"
            android:layout_column="0"
            android:height="70dp"
            android:layout_gravity="left"
            />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="!"
            android:id="@+id/buttonFact"
            android:layout_row="2"
            android:height="70dp"
            android:onClick="onClick"
            android:layout_gravity="right"
            android:layout_column="1"
            />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="√"
            android:id="@+id/buttonRoot"
            android:layout_row="2"
            android:height="70dp"
            android:onClick="onClick"
            android:layout_gravity="right"
            android:layout_column="2"
            />
        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="^"
            android:onClick="onClick"
            android:id="@+id/buttonRaiseTo"
            android:layout_row="2"
            android:height="70dp"
            android:layout_column="3"
            android:layout_gravity="left|right" />

    </GridLayout>
</RelativeLayout>